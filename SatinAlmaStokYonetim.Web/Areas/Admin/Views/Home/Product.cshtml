<div class="row">
    <div class="col-12">
        <div class="page-title-box">

            <h4 class="page-title">Ön Panel</h4>
        </div>
    </div>
</div>
<div class="card border-light border">
    <h6 class="card-header"><i b-eruwahco1m="" class=" uil-building me-1"></i>Ürün İşlemleri</h6>
    <div class="card-body">
        <div class="row mb-2">
            <div class="col-sm-4">
                <button class="btn btn-success btn-sm mb-2" data-bs-toggle="modal" data-bs-target="#addProductModal"><i class="mdi mdi-plus-circle me-2"></i> Ürün Ekle</button>
            </div>
            <div class="col-sm-8">
                <div class="d-flex align-items-center px-2">
                    <label class="me-2" style="width:80px;">Kategori:</label>
                    <select class="form-select" id="categoryOption" onchange="categoryOptionChange()">
                        <option selected="" value="0">Tüm Kategoriler</option>
                    </select>
                </div>
            </div>
        </div>
        <hr />

        <div id="divProducts">

        </div>
    </div>
</div>


<div class="modal fade" id="productModal" tabindex="-1" role="dialog"
     aria-labelledby="vLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="productModalLabel">Ürün Bilgileri</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-hidden="true"></button>
            </div>
            <div class="modal-body mt-4 mb-4">
                <div class="d-flex align-items-center px-2 mb-2">
                    <label class="me-2" style="width:80px;">Kategori:</label>
                    <select class="form-select" id="modalCategoryOption" onchange="modalCategoryOptionChange()">
                        <option selected="" value="0">Tüm Kategoriler</option>
                    </select>
                </div>
                <div class="d-flex align-items-center px-2 mb-2">
                    <label class="me-2" style="width:80px;">Ürün Adı:</label>
                    <input type="text" id="inputProductName" class="form-control" />
                </div>
                <div class="d-flex align-items-center px-2 mb-2">
                    <label class="me-2" style="width:80px;">Birim:</label>
                    <select class="form-select" id="modalUnitOption" onchange="modalUnitOptionChange()">
                        <option selected="" disabled value="0">Birim Seçiniz...</option>
                    </select>
                </div>
                <div class="d-flex align-items-center px-2">
                    <label class="me-2" style="width:80px;">Birim Değeri:</label>
                    <input type="number" id="inputUnitQuantityName" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">Vazgeç</button>
                <button type="button" class="btn btn-sm btn-primary" onclick="saveProduct()">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/product/product.js"></script>
<script src="~/js/other.js"></script>
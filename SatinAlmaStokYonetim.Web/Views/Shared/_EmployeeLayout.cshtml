﻿@using SatinAlmaStokYonetim.Code;
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <title>Layout - Ahlatcı Teknoloji - Kurumsal Yönetim Sistemi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS -->
    <link href="~/assets/css/vendor/dataTables.bootstrap5.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/vendor/responsive.bootstrap5.css" rel="stylesheet" type="text/css">
    <link href="~/assets/images/favicon.ico" rel="shortcut icon">
    <link href="~/assets/css/vendor/jquery-jvectormap-1.2.2.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/app.min.css" rel="stylesheet" type="text/css" id="light-style" disabled="disabled">
    <link href="~/assets/css/app-dark.min.css" rel="stylesheet" type="text/css" id="dark-style">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>

    <script>
        let CID = `@Repo.Session.CompanyId`;
        let UID = `@Repo.Session.UserId`;
        let DID = `@Repo.Session.DepartmentId`;
        let CNA = `@Repo.Session.CompanyName`;
        let DNA = `@Repo.Session.DepartmentName`
    </script>
</head>

<body class="loading" data-layout="detached"
      data-layout-config='{"layoutBoxed":false, "leftSidebarCondensed":false, "leftSidebarScrollable":false,"darkMode":true, "showRightSidebarOnStart": true}'>
</body>

<div class="navbar-custom topnav-navbar topnav-navbar-dark">
    <div class="container-fluid">

        <a asp-area="Employee" asp-controller="Home" asp-action="Index" class="topnav-logo">
            <span class="topnav-logo-lg">
                <img src="~/assets/images/navlogo.png">
            </span>

        </a>

        <ul class="list-unstyled topbar-menu float-end mb-0">

            <li class="dropdown notification-list topbar-dropdown d-none d-lg-block">
                <a class="nav-link dropdown-toggle arrow-none" data-bs-toggle="dropdown" id="topbar-languagedrop" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    <img src="~/assets/images/flags/turkiye.png" alt="user-image" class="me-1" height="12"> <span class="align-middle">Türkçe</span> <i class="mdi mdi-chevron-down"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animated topbar-dropdown-menu" aria-labelledby="topbar-languagedrop">

                    <a href="javascript:void(0);" class="dropdown-item notify-item">
                        <img src="~/assets/images/flags/germany.jpg" alt="user-image" class="me-1" height="12"> <span class="align-middle">Deutsch</span>
                    </a>

                    <a href="javascript:void(0);" class="dropdown-item notify-item">
                        <img src="~/assets/images/flags/italy.jpg" alt="user-image" class="me-1" height="12"> <span class="align-middle">L'Italiano</span>
                    </a>

                    <a href="javascript:void(0);" class="dropdown-item notify-item">
                        <img src="~/assets/images/flags/spain.jpg" alt="user-image" class="me-1" height="12"> <span class="align-middle">Español</span>
                    </a>

                    <a href="javascript:void(0);" class="dropdown-item notify-item">
                        <img src="~/assets/images/flags/england.png" alt="user-image" class="me-1" height="12"> <span class="align-middle">English</span>
                    </a>

                </div>
            </li>

            <li class="dropdown notification-list">
                <a class="nav-link dropdown-toggle arrow-none" data-bs-toggle="dropdown" href="#" id="topbar-notifydrop" role="button" aria-haspopup="true" aria-expanded="false">
                    <i class="dripicons-bell noti-icon"></i>
                    <span class="noti-icon-badge"></span>
                </a>
                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animated dropdown-lg" aria-labelledby="topbar-notifydrop">

                    <div class="dropdown-item noti-title">
                        <h5 class="m-0">
                            <span class="float-end">
                                <a href="javascript: void(0);" class="text-dark">
                                    <small>Temizle</small>
                                </a>
                            </span>Bildirimler
                        </h5>
                    </div>

                    <div style="max-height: 230px;" data-simplebar="init">
                        <div class="simplebar-wrapper" style="margin: 0px;">
                            <div class="simplebar-height-auto-observer-wrapper"><div class="simplebar-height-auto-observer"></div></div><div class="simplebar-mask">
                                <div class="simplebar-offset" style="right: 0px; bottom: 0px;">
                                    <div class="simplebar-content-wrapper" style="height: auto; overflow: hidden;">
                                        <div class="simplebar-content" style="padding: 0px;">
                                        </div>
                                    </div>
                                </div>
                            </div><div class="simplebar-placeholder" style="width: 0px; height: 0px;"></div>
                        </div><div class="simplebar-track simplebar-horizontal" style="visibility: hidden;"><div class="simplebar-scrollbar" style="width: 0px; display: none;"></div></div><div class="simplebar-track simplebar-vertical" style="visibility: hidden;"><div class="simplebar-scrollbar" style="height: 0px; display: none;"></div></div>
                    </div>

                    <a href="javascript:void(0);" class="dropdown-item text-center text-primary notify-item notify-all">
                        Hepsini Göster
                    </a>

                </div>
            </li>


            <li class="notification-list mt-3">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="color-scheme-mode" id="lightMode" onclick="lightModeTogle()">
                    <label class="form-check-label" for="lightMode">Işıklar</label>
                </div>
            </li>


            <li class="dropdown notification-list">
                <a class="nav-link dropdown-toggle nav-user arrow-none me-0" data-bs-toggle="dropdown" id="topbar-userdrop" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    <span class="account-user-avatar">
                        <img src="~/assets/images/users/avatar-1.jpg" alt="user-image" class="rounded-circle">
                    </span>
                    <span>
                        <span class="account-user-name">@Repo.Session.Username</span>
                        <span class="account-position">@Repo.Session.DepartmentName</span>
                    </span>
                </a>
                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animated topbar-dropdown-menu profile-dropdown" aria-labelledby="topbar-userdrop">
                    <div class=" dropdown-header noti-title">
                        <h6 class="text-overflow m-0">Hoşgeldiniz!</h6>
                    </div>

                    <a href="javascript:void(0);" class="dropdown-item notify-item">
                        <i class="mdi mdi-account-circle me-1"></i>
                        <span>Hesabım</span>
                    </a>

                    <a href="javascript:void(0);" class="dropdown-item notify-item">
                        <i class="mdi mdi-lifebuoy me-1"></i>
                        <span>Destek</span>
                    </a>

                    <a asp-area="" asp-controller="Account" asp-action="Logout" class="dropdown-item notify-item">
                        <i class="mdi mdi-logout me-1"></i>
                        <span>Çıkış Yap</span>
                    </a>

                </div>
            </li>

        </ul>
        <a class="button-menu-mobile disable-btn">
            <div class="lines">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </a>
    </div>
</div>

<div class="container-fluid">

    <div class="wrapper">

        <div class="leftside-menu leftside-menu-detached">

            <div class="leftbar-user">
                <a href="javascript: void(0);">
                    <img src="~/assets/images/users/avatar-1.jpg" alt="user-image" height="42"
                         class="rounded-circle shadow-sm">
                    <span class="leftbar-user-name">@Repo.Session.Username</span>
                </a>
            </div>

            <ul class="side-nav">

                <li class="side-nav-title side-nav-item">Uygulamalar</li>

                <li class="side-nav-item">
                    <a asp-area="Employee" asp-controller="Home" asp-action="Message" class="side-nav-link">
                        <i class="uil-comments-alt"></i>
                        <span> Mesajlaşma </span>
                    </a>
                </li>

                @if (Repo.Session.Authority == "Talep")
                {
                    <li class="side-nav-item">
                        <a data-bs-toggle="collapse" href="#sidebarRequest" aria-expanded="false" aria-controls="sidebarRequest"
                           class="side-nav-link collapsed">
                            <i class="dripicons-pencil"></i>
                            <span> Talepler </span>
                            <span class="badge bg-danger float-center ms-2" id="requestCount" style="display:none;"></span>
                            <span class="menu-arrow"></span>

                        </a>
                        <div class="collapse" id="sidebarRequest">
                            <ul class="side-nav-second-level">
                                <li>
                                    <a asp-area="Employee" asp-controller="Home" asp-action="CreateRequest">
                                        Talep Oluştur
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="Employee" asp-controller="Home" asp-action="ApproveRequest">
                                        Talep Onay
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                }

                    <li class="side-nav-item">
                        <a data-bs-toggle="collapse" href="#sidebarOffer" aria-expanded="false"
                           aria-controls="sidebarOffer" class="side-nav-link collapsed">
                            <i class="mdi-offer mdi"></i>
                            <span> Teklifler </span>
                            <span class="menu-arrow"></span>
                        </a>
                        <div class="collapse" id="sidebarOffer">
                            <ul class="side-nav-second-level">
                                @if (Repo.Session.Authority == "Talep")
                                {
                                    <li>
                                        <a asp-area="Employee" asp-controller="Home" asp-action="CreateOffer">Teklif Gir</a>
                                    </li>
                                }
                                @if (Repo.Session.Authority == "Talep")
                                {
                                    <li>
                                        <a asp-area="Employee" asp-controller="Home" asp-action="OfferApproval">Teklif Onay</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </li>


                @if (Repo.Session.Authority == "Talep")
                {
                    <li class="side-nav-item">
                        <a asp-area="Employee" asp-controller="Home" asp-action="ManageStock" class="side-nav-link">
                            <i class="mdi-warehouse mdi"></i>
                            <span> Stok İşlemleri </span>
                        </a>
                    </li>
                }

                @if (Repo.Session.Authority == "Talep")
                {

                    <li class="side-nav-title side-nav-item">Muhasebe İşlemleri</li>

                    <li class="side-nav-item">
                        <a asp-area="Employee" asp-controller="Home" asp-action="InvoiceEntry" class="side-nav-link">
                            <i class="uil-invoice"></i>
                            <span> Fatura Girişi </span>
                        </a>
                    </li>

                    <li class="side-nav-item">
                        <a asp-area="Employee" asp-controller="Home" asp-action="Invoices" class="side-nav-link">
                            <i class="uil-receipt-alt"></i>
                            <span> Faturalar </span>
                        </a>
                    </li>
                }
                <li class="side-nav-item">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="side-nav-link">
                        <i class="uil-receipt-alt"></i>
                        <span> Admin Kısayol </span>
                    </a>
                </li>
            </ul>


            <div class="clearfix"></div>
            <!-- Sidebar -left -->

        </div>
        <!-- Left Sidebar End -->

        <div class="content-page">
            <div class="content">
                <div class="row mt-4">
                    <h5 class="mb-3 bg-light p-2">
                        <i class="mdi mdi-office-building me-1"></i> Şirket: @Repo.Session.CompanyName
                    </h5>
                </div>
                @RenderBody()
            </div>
            <!-- Footer Start -->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <script>document.write(new Date().getFullYear())</script> © Kurumsal Yönetim Sistemi -
                            Ahlatcı Teknoloji
                        </div>
                        <div class="col-md-6">
                            <div class="text-md-end footer-links d-none d-md-block">
                                <a href="javascript: void(0);">Hakkında</a>
                                <a href="javascript: void(0);">Destek</a>
                                <a href="javascript: void(0);">İletişime Geç</a>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
            <!-- end Footer -->

        </div>
        <!-- content-page -->

    </div>
</div>

<script src="~/assets/js/vendor.min.js"></script>
<script src="~/assets/js/app.min.js"></script>



<script src="~/assets/js/vendor/jquery.dataTables.min.js"></script>
<script src="~/assets/js/vendor/dataTables.bootstrap5.js"></script>
<script src="~/assets/js/vendor/dataTables.responsive.min.js"></script>
<script src="~/assets/js/vendor/handlebars.min.js"></script>
<script src="~/assets/js/vendor/typeahead.bundle.min.js"></script>

<script src="~/assets/js/pages/demo.typehead.js"></script>
<script src="~/js/other.js"></script>

@await RenderSectionAsync("Scripts", required: false)



</html>